generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// model for paper trade portfolio
model Portfolio {
  id             Int        @id @default(autoincrement())
  userName       String     @unique
  initialCapital Float      @default(0)
  positions      Position[]
  trades         Trade[]
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
}

// model for papertrade's position means no. of stocks 
model Position {
  id          Int       @id @default(autoincrement())
  portfolioId Int
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id])
  symbol      String
  quantity    Int       @default(0)

  @@unique([portfolioId, symbol])
}

// model for papertrade's trade means buy or sell of stock
model Trade {
  id          Int       @id @default(autoincrement())
  portfolioId Int
  portfolio   Portfolio @relation(fields: [portfolioId], references: [id])
  symbol      String
  type        TradeType
  price       Float
  quantity    Int
  createdAt   DateTime  @default(now())
}

enum TradeType {
  BUY
  SELL
}
